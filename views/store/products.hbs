<hr class="offset-top">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
<div class="tags">
    <div class="container">
        <div class="btn-group pull-right sorting">
            <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="ion-arrow-down-b"></i> Sắp xếp
            </button>

            <ul class="dropdown-menu">
                <li class="active"><a href="javascript:;" class="sort-product" data-id="1"> <i class="ion-arrow-down-c"></i> Tên [A-Z]</a></li>
                <li><a href="javascript:;" class="sort-product" data-id="2"> <i class="ion-arrow-up-c"></i> Tên [Z-A]</a></li>
                <li><a href="javascript:;" class="sort-product" data-id="3"> <i class="ion-arrow-down-c"></i> Giá [Low-High]</a></li>
                <li><a href="javascript:;" class="sort-product" data-id="4"> <i class="ion-arrow-up-c"></i> Giá [High-Low]</a></li>
            </ul>
        </div>

        <p>Search by tags</p>
        <form method="post" id="typeform">
            <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-default btn-sm {{#if Allcheck}} active{{/if}}">
                    <input type="radio" name="Type" onchange="filterChange();" value="" checked > All products
                </label>
                <label class="btn btn-default btn-sm {{#if Desktopscheck}}active{{/if}}">
                    <input type="radio" name="Type" onchange="filterChange();" value="Desktops"> Desktops
                </label>
                <label class="btn btn-default btn-sm {{#if Laptopscheck}}active{{/if}}">
                    <input type="radio" name="Type" onchange="filterChange();" value="Laptops"> Laptops
                </label>
            </div>
        </form>
    </div>
</div>




<div class="container">
    <div class="row">
        <!-- Filter -->
        <div class="col-xs-12 col-sm-3 col-md-3">
            <hr class="offset-lg">
            <div class="filter">
                <div class="item">
                    <div class="title">
                        <a href="javascript:;" data-action="open" class="down"> <i class="ion-android-arrow-dropdown"></i>
                            Open</a>
                        <a href="javascript:;" data-action="clear"> <i class="ion-ios-trash-outline"></i> Reset</a>
                        <h1 class="h4">Màn hình</h1>
                    </div>

                    <div class="controls grid">
                        <div class="checkbox-group" data-status="inactive" >
                            <div class="checkbox"><i class="ion-android-done"></i></div>
                            <div class="label">13.3"</div>
                            <input type="checkbox" name="Display" value='13.3"'>
                        </div>

                        <div class="checkbox-group" data-status="inactive" >
                            <div class="checkbox"><i class="ion-android-done"></i></div>
                            <div class="label">14"</div>
                            <input type="checkbox" name="Display" value='14"'>
                        </div>

                        <div class="checkbox-group" data-status="inactive" >
                            <div class="checkbox"><i class="ion-android-done"></i></div>
                            <div class="label">15.6"</div>
                            <input type="checkbox" name="Display" value='15.6"'>
                        </div>

                        <div class="checkbox-group" data-status="inactive" >
                            <div class="checkbox"><i class="ion-android-done"></i></div>
                            <div class="label">17"</div>
                            <input type="checkbox" name="Display" value='17"'>
                        </div>

                        <div class="checkbox-group" data-status="inactive" >
                            <div class="checkbox"><i class="ion-android-done"></i></div>
                            <div class="label">21.5"</div>
                            <input type="checkbox" name="Display" value='21.5"'>
                        </div>
                    </div>
                </div>

                <br>

                <div class="item">
                    <div class="title">
                        <a href="javascript:;" data-action="open" class="down"> <i class="ion-android-arrow-dropdown"></i>
                            Open</a>
                        <a href="javascript:;" data-action="clear"> <i class="ion-ios-trash-outline"></i> Reset</a>
                        <h1 class="h4">Vi xử lý</h1>
                    </div>
                    <div class="controls grid">
                        <div class="checkbox-group" data-status="inactive" >
                            <div class="checkbox"><i class="ion-android-done"></i></div>
                            <div class="label">Core i3</div>
                            <input type="checkbox" name="Processor" value='i3'>
                        </div>

                        <div class="checkbox-group" data-status="inactive" >
                            <div class="checkbox"><i class="ion-android-done"></i></div>
                            <div class="label">Core i5</div>
                            <input type="checkbox" name="Processor" value='i5'>
                        </div>

                        <div class="checkbox-group" data-status="inactive" >
                            <div class="checkbox"><i class="ion-android-done"></i></div>
                            <div class="label">Core i7</div>
                            <input type="checkbox" name="Processor" value='i7'>
                        </div>

                        <div class="checkbox-group" data-status="inactive" >
                            <div class="checkbox"><i class="ion-android-done"></i></div>
                            <div class="label">Ryzen 5</div>
                            <input type="checkbox" name="Processor" value='Ryzen 5'>
                        </div>

                        <div class="checkbox-group" data-status="inactive" >
                            <div class="checkbox"><i class="ion-android-done"></i></div>
                            <div class="label">Ryzen 7</div>
                            <input type="checkbox" name="Processor" value='Ryzen 7'>
                        </div>
                        <div class="checkbox-group" data-status="inactive" >
                            <div class="checkbox"><i class="ion-android-done"></i></div>
                            <div class="label">Apple M1</div>
                            <input type="checkbox" name="Processor" value='M1'>
                        </div>
                    </div>
                </div>

                <br>

                <div class="item">
                    <div class="title">
                        <a href="javascript:;" data-action="open" class="down"> <i class="ion-android-arrow-dropdown"></i>
                            Open</a>
                        <a href="javascript:;" data-action="clear"> <i class="ion-ios-trash-outline"></i> Clear</a>
                        <h1 class="h4">RAM</h1>
                    </div>

                    <div class="controls grid">
                        <div class="checkbox-group" data-status="inactive" >
                            <div class="checkbox"><i class="ion-android-done"></i></div>
                            <div class="label" data-value="7 in">4GB</div>
                            <input type="checkbox" name="Memory" value="4GB">
                        </div>

                        <div class="checkbox-group" data-status="inactive" >
                            <div class="checkbox"><i class="ion-android-done"></i></div>
                            <div class="label" data-value="10 in">8GB</div>
                            <input type="checkbox" name="Memory" value="8GB">
                        </div>

                        <div class="checkbox-group" data-status="inactive" >
                            <div class="checkbox"><i class="ion-android-done"></i></div>
                            <div class="label" data-value="11 in">16GB</div>
                            <input type="checkbox" name="Memory" value="16GB">
                        </div>

                    </div>
                </div>

                <br>

                <div class="item">
                    <div class="title">
                        <a  data-action="open" class="down"> <i class="ion-android-arrow-dropdown"></i>
                            Xem</a>
                        <a data-action="clear"> <i class="ion-ios-trash-outline"></i> Reset</a>
                        <h1 class="h4">Lọc theo giá</h1>
                    </div>

                    <div class="controls" onmouseup="filterChange();">
                        <br>
                        <div id="slider-price"></div>
                        <br>
                        <p id="amount"></p>
                    </div>
                </div>

                <br>

                <div class="item">
                    <div class="title">
                        <a href="javascript:;" data-action="open" class="down"> <i class="ion-android-arrow-dropdown"></i>
                            Xem</a>
                        <a href="javascript:;" data-action="clear"> <i class="ion-ios-trash-outline"></i> Reset</a>
                        <h1 class="h4">Thương hiệu</h1>
                    </div>

                    <div class="controls grid">
                        {{#each Manufacturers}}
                            <div class="checkbox-group" data-status="inactive" >
                                <div class="checkbox"><i class="ion-android-done"></i></div>
                                <div class="label" data-value="11 in">{{name}}</div>
                                <input type="checkbox" name="Manufacturer" value="{{_id}}">
                            </div>
                        {{/each}}

                    </div>
                </div>
            </div>
        </div>

        <!-- Products -->

        <div class="col-sm-8 col-md-9" id="products">
            <hr class="offset-lg">

            <div class="products">
                <div class="row" >
                    {{#if products}}
                        {{#each products}}
                            <div class="col-sm-6 col-md-4 product">
                                <div class="body">
                                    <a href="#favorites" class="favorites" data-favorite="inactive"><i class="ion-ios-heart-outline"></i></a>
                                    <a href="/store/{{_id}}"><img src="{{cover}}" alt="Apple iMac 27 Retina"/></a>

                                    <div class="content">
                                        <h1 class="h3">{{name}}</h1>
                                        <p class="price">{{convertPrice basePrice}}</p>
                                        <label>{{type}}</label>

                                        <a href="/store/{{_id}}" ><button class="btn btn-link"> <i class="ion-android-open"></i> Chi tiết</button></a>
                                        <button class="btn btn-primary btn-sm rounded" id="{{_id}}" onclick="addToCart_Click(this);"> <i class="ion-bag"></i> Thêm vào giỏ</button>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    {{else}}
                        <h3>Không tìm thấy sản phẩm nào!</h3>
                    {{/if}}

                </div>
            </div>
            {{#with pagination}}
            <nav class="pagination" data-toggle="buttons">
                <label class="btn btn-info pagination-button {{#eq page 1}} disabled {{/eq}}" >
                    <input type="radio" name="Page" onchange="filterChange();" value="{{prevPage}}"><i class="ion-ios-arrow-left"> </i>
                </label>
                {{#each ../pagingButtons}}
                    {{#gt value 0}}
                        {{#lte value ../totalPages}}
                            <label class="btn btn-info pagination-button {{#if active}}active{{/if}} {{#eq ../totalDocs 0}}disabled{{/eq}}">
                                <input type="radio" name="Page" onchange="filterChange();" value="{{value}}" {{#if active}}checked{{/if}}> {{value}}
                            </label>
                        {{/lte}}
                    {{/gt}}
                {{/each}}

                <label class="btn btn-info pagination-button {{#eq page totalPages}}disabled {{/eq}}">
                    <input type="radio" name="Page" onchange="filterChange();" value="{{nextPage}}"><i class="ion-ios-arrow-right"></i>
                </label>
            </nav>
            {{/with}}
        </div>
        <!-- /// -->
    </div>
</div>
<script type="text/x-handlebars" id="products-template">
<hr class="offset-lg">
            <div class="products">
                <div class="row">
                    \{{#if products}}
                        \{{#each products}}
                            <div class="col-sm-6 col-md-4 product">
                                <div class="body">
                                    <a href="#favorites" class="favorites" data-favorite="inactive"><i class="ion-ios-heart-outline"></i></a>
                                    <a href="/store/\{{_id}}"><img src="\{{cover}}" alt="Apple iMac 27 Retina"/></a>

                                    <div class="content">
                                        <h1 class="h3">\{{name}}</h1>
                                        <p class="price">\{{convertPrice basePrice}}</p>
                                        <label>\{{type}}</label>

                                        <a href="/store/{{_id}}" ><button class="btn btn-link"> <i class="ion-android-open"></i> Chi tiết</button></a>
                                        <button class="btn btn-primary btn-sm rounded" id="\{{_id}}" onclick="addToCart_Click(this);"> <i class="ion-bag"></i> Thêm vào giỏ</button>
                                    </div>
                                </div>
                            </div>
                        \{{/each}}
                    \{{else}}
                        <h3>Không tìm thấy sản phẩm nào!</h3>
                    \{{/if}}

                </div>
            </div>

            \{{#with pagination}}
            <nav class="pagination" data-toggle="buttons">
                <label class="btn btn-info pagination-button \{{#eq page 1}}disabled \{{/eq}}" >
                    <input type="radio" name="Page" onchange="filterChange();" value="\{{prevPage}}" ><i class="ion-ios-arrow-left" ></i>
                </label>
                \{{#each ../pagingButtons}}
                    \{{#gt value 0}}
                    \{{#lte value ../totalPages}}
                            <label class="btn btn-info pagination-button \{{#if active}}active\{{/if}} \{{#eq ../totalDocs 0}}disabled\{{/eq}}">
                                <input type="radio" name="Page" onchange="filterChange();" value="\{{value}}" \{{#if active}}checked\{{/if}}> \{{value}}
                            </label>
                    \{{/lte}}
                    \{{/gt}}
                \{{/each}}

                <label class="btn btn-info pagination-button \{{#eq page totalPages}}disabled \{{/eq}}">
                    <input type="radio" name="Page" onchange="filterChange();" value="\{{nextPage}}"><i class="ion-ios-arrow-right" ></i>
                </label>
            </nav>
            \{{/with}}
</script>