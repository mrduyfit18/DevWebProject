{{#with comments}}
<div class="wrapper" >
    <div class="content">
        {{#each docs}}
            <h3>{{name}}</h3>
            <label>{{convertTime date}}</label>
            <p>
                {{content}}
            </p>
        {{/each}}
    </div>
</div>
<div class="align-center">
    <input hidden value="{{page}}" id="curPage">
    <button id="prev" data-id="{{prevPage}}" {{#unless hasPrevPage}}disabled{{/unless}} class="btn btn-control" onclick="prevCmts_Click();" > <i class="ion-ios-arrow-left"></i></button>
    <button id="next" data-id="{{nextPage}}" {{#unless hasNextPage}}disabled{{/unless}} class="btn btn-control" onclick="nextCmts_Click();"> <i class="ion-ios-arrow-right"></i></button>
</div>
{{/with}}